.account-area.account-profile-page
  .row
    .col-sm-offset-2.col-sm-8.col-lg-offset-3.col-lg-6
      .panel.panel-form
        .panel-heading
          %h2.text-center= I18n.t('authy_verify_installation_title', {:scope => 'devise'})
        .panel-body
          .col-xs-offset-2.col-xs-8  
            = verify_authy_installation_form do
              .text-center
                %legend= I18n.t('submit_token_title', {:scope => 'devise'})
                = label_tag :token
                = text_field_tag :token, "", :autocomplete => :off, :id => 'authy-token', class: "form-control"
                = authy_request_sms_link  
                = submit_tag I18n.t('enable_my_account', {:scope => 'devise'}), :class => 'submit'