%section.welcome-div-wrap
  .container
  .row
    .welcome-div.pull-right.text-center
      %a{:href => "#"}
        %img.img-responsive{:src => "/assets/logo.png"}/
      %h2.subtitle WELCOME TO
      %h1.title AML Bitcoin
      .form_group.text-center
        %h3 AML Bitcoin Verification
        .btn_block
          - if current_account
            %a.btn.lg_btn{:href => control_profile_path} My Account
          - elsif current_verifier
            %a.btn.lg_btn{:href => verifiers_verifications_path} My Account
          - else
            %a.btn.lg_btn{:href => new_account_session_path} Login
            %span.or or
            %a.btn.lg_btn{:href => agreements_path} Account Registration
