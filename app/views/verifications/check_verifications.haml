</div>
</div>
</div>
</div>
<script type="text/javascript">
$(document).ready(function(){
$(".verify").click(function(){
$("#myModal").modal({backdrop: 'static', keyboard: false});
});
$(".modelclose").click(function(){
$("#myModal").modal('hide');
$("#myModals").modal({backdrop: 'static', keyboard: false});
});
});
</script>
